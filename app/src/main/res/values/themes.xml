<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme -->
    <style name="Base.Theme.Fiddler" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Set default font globally (handwriting for body) -->
        <item name="android:fontFamily">@font/font_handwriting</item>
    </style>

    <!-- App theme inherits from base -->
    <style name="Theme.Fiddler" parent="Base.Theme.Fiddler" />

    <!-- Theme overlay for fullscreen containers -->
    <style name="ThemeOverlay.Fiddler.FullscreenContainer" parent="">
        <item name="fullscreenBackgroundColor">@color/black</item>
        <item name="fullscreenTextColor">@color/black</item>
    </style>

</resources>
