<resources>

    <style name="Widget.Theme.Fiddler.ButtonBar.Fullscreen" parent="">
        <item name="android:background">@color/white</item>
        <item name="android:buttonBarStyle">?android:attr/buttonBarStyle</item>
    </style>

    <!-- Headings -->
    <style name="TextHead" parent="TextAppearance.Material3.HeadlineSmall">
        <item name="android:fontFamily">@font/font_head</item>
    </style>

    <!-- Titles/Subtitles -->
    <style name="TextTitle" parent="TextAppearance.Material3.TitleMedium">
        <item name="android:fontFamily">@font/font_body</item>
    </style>

    <style name="WhiteDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:windowBackground">@android:color/white</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.8</item> <!-- black overlay -->
    </style>

</resources>