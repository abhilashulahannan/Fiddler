<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="oval">

    <!-- True black to perfectly hide the camera hole -->
    <solid android:color="#000000" />

    <!-- Optional subtle shadow for smooth blending (looks nice on light backgrounds) -->
    <stroke
        android:width="0.5dp"
        android:color="#111111" />

    <!-- Minimal padding to make sure it covers the punch hole area completely -->
    <padding
        android:left="1dp"
        android:top="1dp"
        android:right="1dp"
        android:bottom="1dp" />

</shape>
