<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorSurface">

    <LinearLayout
        android:id="@+id/fidland_root"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <Space
            android:layout_width="match_parent"
            android:layout_height="60dp" />

        <!-- Title -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/font_body"
            android:textColor="?attr/colorOnSurface"
            android:text="FidLand"
            android:textSize="54sp"
            android:paddingBottom="8dp" />

        <!-- About Description -->
        <TextView
            android:id="@+id/tv_about"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/font_handwriting"
            android:textColor="?attr/colorOnSurface"
            android:text="My attempt at dynamic island."
            android:textSize="20sp" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="32dp" />

        <!-- Enable switch -->
        <com.google.android.material.checkbox.MaterialCheckBox
            android:id="@+id/switch_enable"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/font_handwriting"
            android:textColor="?attr/colorOnSurface"
            android:textSize="20sp"
            android:buttonTint="@color/checkbox_color"
            android:text="Enable Fidland" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="32dp" />

        <!-- Status Bar Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/font_body"
            android:textColor="?attr/colorOnSurface"
            android:text="All things status bar"
            android:textSize="28sp"
            android:paddingBottom="8dp" />

        <TextView
            android:id="@+id/tv_netstatnfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/font_handwriting"
            android:textColor="?attr/colorOnSurface"
            android:textSize="20sp"
            android:text="Dynamic configurations for all status bar elements â€” network, equalizer, and indicators." />

        <com.google.android.material.checkbox.MaterialCheckBox
            android:id="@+id/cb_network_traffic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Network Traffic Module"
            android:fontFamily="@font/font_handwriting"
            android:textColor="?attr/colorOnSurface"
            android:textSize="20sp"
            android:buttonTint="@color/checkbox_color" />

        <com.google.android.material.checkbox.MaterialCheckBox
            android:id="@+id/cb_equalizer_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/font_handwriting"
            android:textColor="?attr/colorOnSurface"
            android:textSize="20sp"
            android:buttonTint="@color/checkbox_color"
            android:text="Equalizer / Media Info" />

        <com.google.android.material.checkbox.MaterialCheckBox
            android:id="@+id/cb_notifications"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Notifications Display"
            android:fontFamily="@font/font_handwriting"
            android:textColor="?attr/colorOnSurface"
            android:textSize="20sp"
            android:buttonTint="@color/checkbox_color" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="60dp" />

        <!-- Music App Integration -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/font_body"
            android:textColor="?attr/colorOnSurface"
            android:text="Music App Integration"
            android:textSize="28sp"
            android:paddingBottom="8dp" />

        <TextView
            android:id="@+id/tv_mskint"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/font_handwriting"
            android:textColor="?attr/colorOnSurface"
            android:textSize="20sp"
            android:text="Integrate media apps like Spotify or YouTube Music. Quick player actions, seek bar, and queue access." />

        <com.google.android.material.checkbox.MaterialCheckBox
            android:id="@+id/cb_music_player"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enable Music Player Controls"
            android:fontFamily="@font/font_handwriting"
            android:textColor="?attr/colorOnSurface"
            android:textSize="20sp"
            android:buttonTint="@color/checkbox_color" />

        <com.google.android.material.checkbox.MaterialCheckBox
            android:id="@+id/cb_music_queue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enable Music Queue Page"
            android:fontFamily="@font/font_handwriting"
            android:textColor="?attr/colorOnSurface"
            android:textSize="20sp"
            android:buttonTint="@color/checkbox_color" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="60dp" />

        <!-- Visual Customization -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/font_body"
            android:textColor="?attr/colorOnSurface"
            android:text="Visual Customization"
            android:textSize="28sp"
            android:paddingBottom="8dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/font_handwriting"
            android:textColor="?attr/colorOnSurface"
            android:textSize="20sp"
            android:text="Tweak animation speed, corner radius, and transparency of the Fidland dashboard." />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Animation Speed"
            android:textColor="?attr/colorOnSurface"
            android:fontFamily="@font/font_handwriting"
            android:paddingTop="8dp" />

        <com.google.android.material.slider.Slider
            android:id="@+id/sb_animation_speed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/Widget.Material3.Slider"
            android:valueFrom="0"
            android:valueTo="100"
            android:value="40"
            app:trackHeight="3dp"
            app:thumbRadius="15dp"
            app:trackColor="#66ADADAD"
            app:trackColorActive="#2E2E2E"
            app:thumbColor="@color/black" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Transparency"
            android:textColor="?attr/colorOnSurface"
            android:fontFamily="@font/font_handwriting"
            android:paddingTop="8dp" />

        <com.google.android.material.slider.Slider
            android:id="@+id/sb_transparency"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/Widget.Material3.Slider"
            android:valueFrom="0"
            android:valueTo="100"
            android:value="50"
            app:trackHeight="3dp"
            app:thumbRadius="15dp"
            app:trackColor="#66ADADAD"
            app:trackColorActive="#2E2E2E"
            app:thumbColor="@color/black" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Corner Radius"
            android:textColor="?attr/colorOnSurface"
            android:fontFamily="@font/font_handwriting"
            android:paddingTop="8dp" />

        <com.google.android.material.slider.Slider
            android:id="@+id/sb_corner_radius"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/Widget.Material3.Slider"
            android:valueFrom="0"
            android:valueTo="100"
            android:value="60"
            app:trackHeight="3dp"
            app:thumbRadius="15dp"
            app:trackColor="#66ADADAD"
            app:trackColorActive="#2E2E2E"
            app:thumbColor="@color/black" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="60dp" />

        <!-- Quick Settings Checkbox -->
        <com.google.android.material.checkbox.MaterialCheckBox
            android:id="@+id/cb_quick_settings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Quick Settings Module"
            android:fontFamily="@font/font_handwriting"
            android:textColor="?attr/colorOnSurface"
            app:buttonTint="?attr/colorPrimary" />

        <!-- Input rows -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Rows">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/input_rows"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"/>
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Input columns -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Columns"/>

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/input_columns"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"/>

        <Space
            android:layout_width="match_parent"
            android:layout_height="60dp" />

    </LinearLayout>
</ScrollView>
