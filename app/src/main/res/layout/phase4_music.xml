<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/music_topic_container"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:background="@color/black"
    android:padding="10dp">

    <!-- Main vertical container -->
    <LinearLayout
        android:id="@+id/music_main_container"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="4dp"
        android:background="@color/black">

        <!-- Album Art with Overlay -->
        <FrameLayout
            android:id="@+id/album_art_overlay_container"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <!-- Base row: Album Art + Transparent space -->
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <!-- Album Art -->
                <ImageView
                    android:id="@+id/img_album_art"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="6"
                    android:scaleType="centerCrop"
                    android:src="@color/black"
                    android:contentDescription="Album Art" />

                <!-- Transparent right space -->
                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="4"
                    android:background="@android:color/transparent" />
            </LinearLayout>

            <!-- Overlay text layer -->
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="4"
                    android:background="@android:color/transparent" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:background="@drawable/music_right_gradient" />

                <FrameLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="4"
                    android:background="#CC000000">

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="4dp"
                        android:gravity="center_vertical">

                        <TextView
                            android:id="@+id/txt_song_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Song Name"
                            android:textColor="@android:color/white"
                            android:textStyle="bold"
                            android:textSize="18sp"
                            android:ellipsize="end"
                            android:singleLine="true" />

                        <TextView
                            android:id="@+id/txt_artist_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Artist Name"
                            android:textColor="@android:color/white"
                            android:textSize="14sp"
                            android:ellipsize="end"
                            android:singleLine="true" />

                        <TextView
                            android:id="@+id/txt_album_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Album Name"
                            android:textColor="@android:color/white"
                            android:textSize="14sp"
                            android:ellipsize="end"
                            android:singleLine="true" />
                    </LinearLayout>
                </FrameLayout>
            </LinearLayout>
        </FrameLayout>

        <!-- Bottom Controls -->
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="4dp"
            android:paddingBottom="2dp">

            <!-- Seekbar Row -->
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="24dp"
                android:gravity="center_vertical"
                android:paddingStart="4dp"
                android:paddingEnd="4dp">

                <TextView
                    android:id="@+id/txt_current_time"
                    android:layout_width="36dp"
                    android:layout_height="wrap_content"
                    android:text="0:00"
                    android:textColor="@android:color/white"
                    android:textSize="10sp" />

                <SeekBar
                    android:id="@+id/music_seekbar"
                    android:layout_width="0dp"
                    android:layout_height="18dp"
                    android:layout_weight="1"
                    android:max="100"
                    android:progress="0"
                    android:progressTint="#C30000"
                    android:thumbTint="#FFFFFF"
                    android:splitTrack="false" />

                <TextView
                    android:id="@+id/txt_total_time"
                    android:layout_width="36dp"
                    android:layout_height="wrap_content"
                    android:text="3:45"
                    android:textColor="@android:color/white"
                    android:textSize="10sp"
                    android:gravity="end" />
            </LinearLayout>

            <!-- Playback Buttons -->
            <LinearLayout
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="2dp">

                <FrameLayout
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_marginEnd="8dp">
                    <ImageButton
                        android:id="@+id/btn_previous"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:layout_gravity="center"
                        android:background="@null"
                        android:src="@drawable/skip_previous"
                        android:scaleType="fitXY"
                        android:contentDescription="Previous Track" />
                </FrameLayout>

                <FrameLayout
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp">
                    <ImageButton
                        android:id="@+id/btn_play_pause"
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:layout_gravity="center"
                        android:background="@null"
                        android:src="@drawable/play"
                        android:scaleType="fitXY"
                        android:contentDescription="Play/Pause" />
                </FrameLayout>

                <FrameLayout
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_marginStart="8dp">
                    <ImageButton
                        android:id="@+id/btn_next"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:layout_gravity="center"
                        android:background="@null"
                        android:src="@drawable/skip_next"
                        android:scaleType="fitXY"
                        android:contentDescription="Next Track" />
                </FrameLayout>
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

    <!-- Optional ViewPager at the bottom -->
    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/music_apps_viewpager"
        android:layout_width="match_parent"
        android:layout_height="24dp"
        android:layout_gravity="bottom"
        android:layout_marginBottom="2dp" />

</FrameLayout>
