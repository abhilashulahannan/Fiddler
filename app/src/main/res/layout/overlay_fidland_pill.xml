<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/pill_background"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:padding="2dp"
    android:background="@drawable/bg_pill">

    <!-- Main horizontal pill layout (Phases 1â€“3) -->
    <LinearLayout
        android:id="@+id/main_pill_layout"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical">

        <!-- Left segment: NetSpeed + optional icons -->
        <LinearLayout
            android:id="@+id/left_segment"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:background="@android:color/transparent">

            <!-- NetSpeed stacked: Upload over Download -->
            <TextView
                android:id="@+id/txt_upload"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@android:color/white"
                android:textSize="9sp"
                android:visibility="gone"
                android:elevation="4dp" />

            <TextView
                android:id="@+id/txt_download"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@android:color/white"
                android:textSize="9sp"
                android:visibility="gone"
                android:elevation="4dp" />

            <!-- Optional icons for left-side -->
            <LinearLayout
                android:id="@+id/left_icons_container"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical">

                <View
                    android:id="@+id/timer_icon"
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:layout_marginStart="2dp"
                    android:background="@color/black"
                    android:visibility="gone" />

                <View
                    android:id="@+id/call_icon"
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:layout_marginStart="2dp"
                    android:background="@color/black"
                    android:visibility="gone" />

                <View
                    android:id="@+id/bt_icon"
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:layout_marginStart="2dp"
                    android:background="@color/black"
                    android:visibility="gone" />

                <View
                    android:id="@+id/record_icon"
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:layout_marginStart="2dp"
                    android:background="@color/black"
                    android:visibility="gone" />
            </LinearLayout>
        </LinearLayout>

        <!-- Center: Camera hole / fixed circle -->
        <View
            android:id="@+id/camera_mask"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/bg_camera_mask" />

        <!-- Right segment: dynamic content -->
        <LinearLayout
            android:id="@+id/right_segment"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_marginStart="4dp"
            android:background="@android:color/transparent">

            <View
                android:id="@+id/eq_segment"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:layout_marginEnd="2dp"
                android:background="@color/black"
                android:visibility="gone" />

            <View
                android:id="@+id/timer_segment"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:layout_marginEnd="2dp"
                android:background="@color/black"
                android:visibility="gone" />

            <View
                android:id="@+id/call_segment"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:layout_marginEnd="2dp"
                android:background="@color/black"
                android:visibility="gone" />

            <View
                android:id="@+id/bt_segment"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:layout_marginEnd="2dp"
                android:background="@color/black"
                android:visibility="gone" />

            <View
                android:id="@+id/record_segment"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:background="@color/black"
                android:visibility="gone" />
        </LinearLayout>
    </LinearLayout>

    <!-- Expanded Phase 4 container -->
    <FrameLayout
        android:id="@+id/expanded_container"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_gravity="center_horizontal"
        android:visibility="gone"
        android:paddingTop="6dp">

        <!-- Music topic pages -->
        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/music_pages"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <!-- Playlist topic pages -->
        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/playlist_pages"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone" />

        <!-- Apps topic pages -->
        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/apps_pages"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone" />

        <!-- Quick settings topic pages -->
        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/quick_settings_pages"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone" />
    </FrameLayout>
</FrameLayout>
