<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme -->
    <style name="Base.Theme.Fiddler" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Set default font globally (handwriting for body) -->
        <item name="android:fontFamily">@font/font_handwriting</item>
        <item name="colorPrimary">@color/black</item>
        <item name="colorSecondary">#E7505050</item>
        <item name="android:statusBarColor">@color/white</item>  <!-- White status bar -->
        <item name="android:windowLightStatusBar">true</item>    <!-- Dark icons -->
        <!-- Removed materialThemeOverlay to prevent black overlay -->
    </style>

    <!-- App theme inherits from base -->
    <style name="Theme.Fiddler" parent="Base.Theme.Fiddler" />

    <!-- Theme overlay for fullscreen containers (optional) -->
    <style name="ThemeOverlay.Fiddler.FullscreenContainer" parent="">
        <item name="fullscreenBackgroundColor">@android:color/transparent</item>
        <item name="fullscreenTextColor">@color/black</item>
    </style>

</resources>
